<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/car"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image"
        android:paddingStart="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="140sp"
        android:layout_height="100sp"/>


    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/hello"
        android:textColor="@color/black"
        android:paddingStart="18sp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:fontFamily="@font/fvf"
        android:textSize="40sp"
        android:text="HELLO THERE,
 \nWELCOME BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/Sign"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="18sp"
        android:layout_marginTop="-13sp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/hello"
        android:text="Sign In continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Username"
        android:layout_marginTop="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sign"
        app:endIconMode="clear_text"
        android:layout_marginHorizontal="19sp"
        >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/f2"
        android:layout_height="wrap_content"
        android:paddingVertical="17sp"
        android:layout_width="match_parent"
        android:paddingStart="20sp"
        android:hint="Username"
       >

    </com.google.android.material.textfield.TextInputEditText>



</com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/black"
        android:id="@+id/Password"
        android:layout_marginHorizontal="19sp"
        app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/Username"
     android:layout_width="match_parent"
     android:layout_height="0sp"
     app:passwordToggleEnabled="true"
     >
     <com.google.android.material.textfield.TextInputEditText
         android:id="@+id/f1"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:inputType="textPassword"
         android:paddingStart="20sp"
         android:hint="Password"
         />





 </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/Forget"
        android:layout_marginHorizontal="221dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGET PASSWORD?"/>

    <Button
        android:id="@+id/GO"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:text="GO"

        app:layout_constraintTop_toBottomOf="@+id/Forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GO"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="NEW USER? SIGN UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>

